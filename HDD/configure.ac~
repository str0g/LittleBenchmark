#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ([2.65])
AC_INIT(LittleBenchmark:HDD, 1.0.7, str0g.wordpress.com)
AM_INIT_AUTOMAKE(LitttleBenchmark:HDD,1.0.7)
AC_CONFIG_SRCDIR([src/myTime.hpp])
AC_CONFIG_HEADERS([config.h])

# Checks for programs.
AC_PROG_CXX
AC_PROG_CC

# Checks for libraries.
# FIXME: Replace `main' with a function in `-lm':
AC_CHECK_LIB([m], [main])

# Checks for header files.
AC_CHECK_HEADERS([fcntl.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STDBOOL
AC_C_INLINE
AC_TYPE_MODE_T
AC_TYPE_SIZE_T
AC_TYPE_UINT16_T
AC_TYPE_UINT64_T
AC_TYPE_UINT8_T

# Checks for library functions.
AC_CHECK_FUNCS([mkdir rmdir])

AC_CONFIG_FILES([Makefile
                 doc/Makefile
                 doc/readme/Makefile
                 doc/tech/latex/Makefile
                 man/Makefile
                 src/Makefile])
AC_OUTPUT
